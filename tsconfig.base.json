{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mortgage-calculator/calculator-service": ["libs/calculator-service/src/index.ts"],
      "@mortgage-calculator/models": ["libs/models/src/index.ts"],
      "@mortgage-calculator/shared-ui-react": ["libs/shared-ui-react/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
